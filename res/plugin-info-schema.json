{
    "name": "Plugin info",
    "type": "object",
    "properties": {
        "label": {
            "type": "object",
            "description": "This is a hash of language identifier (keys) and full name of the plugin (values).",
            "required": true,
            "additionalProperties": true
        },
        "copyright": {
            "type": "string",
            "description": "Copyright notice",
            "required": false
        },
        "license": {
            "type": "string",
            "description": "License notice",
            "required": false
        },
        "link": {
            "type": "string",
            "description": "Link of the plugin",
            "required": false
        },
        "author": {
            "type": "string",
            "description": "Author of the plugin",
            "required": false
        },
        "currentVersion": {
            "type": "string",
            "description": "Plugin version string",
            "required": false
        },
        "changelog": {
            "type": "object",
            "description": "changelogs",
            "required": true,
            "additionalProperties": true
        },
        "compatibility": {
            "type": "object",
            "description": "Compatibility hints",
            "required": false,
            "properties": {
                "minimumVersion": {
                    "type": ["string", null],
                    "description": "The minimum required shopware version."
                },

                "maximumVersion": {
                    "type": ["string", null],
                    "description": "The maximum supported shopware version."
                },

                "blacklist": {
                    "type": "array",
                    "description": "array of unsupported version",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
